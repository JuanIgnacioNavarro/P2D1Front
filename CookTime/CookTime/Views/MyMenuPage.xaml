<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CookTime.Views.MyMenuPage"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    IconImageSource="MyMenuIcon"
    BackgroundColor="#FFFFFF">

    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding MyMenu}"
            Padding="5">

            <Button Padding ="10" Text="Chef Query" CornerRadius="20" HeightRequest="40"
                    BackgroundColor="#FFFFFF" BorderColor="#631B29" 
                    FontSize="10" HorizontalOptions="End" TextColor="Black"
                    BorderWidth="5" Command="{Binding CheffQueryCommand}"/>
            
            <Frame CornerRadius="150" 
                   HorizontalOptions="Center"
                   HeightRequest="400"
                   WidthRequest="150"
                   IsClippedToBounds="True"
                   Padding="0">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                                Command="{Binding ChangePictureCommand, Mode=TwoWay}">
                    </TapGestureRecognizer>

                </Frame.GestureRecognizers>
                <Image
                    Source="{Binding AddImageSource}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Aspect="Fill">
                </Image>    
                     
                
            </Frame>

            <Label Text="{Binding Name}"
                   FontAttributes="Bold"
                   FontSize="35"
                   TextColor="Black"
                   HorizontalOptions="Center"/>

            <Label Text="{Binding Email}"
                   FontSize="15"
                   TextColor="#B09B35"
                   HorizontalOptions="Center"/>

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center">
                <Label FontSize="20"
                       TextColor="Black"
                       VerticalOptions="Center"
                       Text="{Binding Followers}"/>

                <Label FontSize="20"
                       TextColor="Black"
                       VerticalOptions="Center"
                       Text="{Binding Following}"/>
            </StackLayout>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Text="Date"
                        BackgroundColor="#631B29"
                        TextColor="White"
                        VerticalOptions="Center"
                        HeightRequest="100"
                        Command="{Binding SortDateCommand}"/>

                <Button Grid.Column="1"
                        Text="Rate"
                        BackgroundColor="#631B29"
                        TextColor="White"
                        VerticalOptions="Center"
                        HeightRequest="100"
                        Command="{Binding SortRateCommand}"/>

                <Button Grid.Column="2"
                        Text="Difficulty"
                        BackgroundColor="#631B29"
                        TextColor="White"
                        VerticalOptions="Center"
                        HeightRequest="100"
                        Command="{Binding SortDifficultyCommand}"/>
            </Grid>

            <ListView>
                
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
